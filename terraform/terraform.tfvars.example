# Copy this file to terraform.tfvars and update with your values
# terraform.tfvars is in .gitignore and should not be committed

aws_region = "us-east-1"
environment = "dev"
project_name = "smart-expense-monitor"

# S3 Bucket name (must be globally unique)
# Each user's receipts are stored in: users/{userId}/uploads/
s3_bucket_name = "smart-expense-monitor-receipts"

# Cognito settings
cognito_user_pool_name = "expense-monitor-users"

# Lambda settings
lambda_runtime = "python3.11"
lambda_timeout = 30
lambda_memory_size = 256

# Features
enable_textract = true

# CORS origins (for API Gateway)
allowed_origins = ["*"]

# Cognito callback URLs (must include http:// or https://)
# For local development, use: ["http://localhost:3000", "http://localhost:3000/callback"]
# For production, use your actual domain: ["https://yourdomain.com", "https://yourdomain.com/callback"]
cognito_callback_urls = ["http://localhost:3000", "http://localhost:3000/callback"]

